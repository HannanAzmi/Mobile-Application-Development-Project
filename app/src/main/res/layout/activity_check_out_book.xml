<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v8"
    tools:context=".Booking.CheckOutBook">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="641dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DatePay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/E9FDF2"
                android:text="Date :"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TimePay"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/E9FDF2"
                android:text="Time :"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/E9FDF2"
                android:textSize="17dp"
                android:text="Number of Player :"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/E9FDF2"
                android:text="Number of Games :"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.411"
                app:layout_constraintStart_toEndOf="@+id/NoPlayer"
                app:layout_constraintTop_toBottomOf="@+id/DatePay"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/ShoesPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/E9FDF2"
                android:text="Number of shoes:"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="222dp">

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:background="@color/E9FDF2"
                android:text="Subtotal : "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@color/E9FDF2"
                android:text="Discount :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tax"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/E9FDF2"
                android:text="Tax      :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totall"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/E9FDF2"
                android:text="Total : RM "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="39dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/Debit"
                android:layout_width="96dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/button123"
                android:backgroundTint="@color/E9FDF2"
                android:text="Debit"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="59dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/debit" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="23dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/onlineBank"
                android:layout_width="96dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/button123"
                android:backgroundTint="@color/E9FDF2"
                android:text="Online Banking"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="59dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/obankk" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="134dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/Visa"
                android:layout_width="92dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/button123"
                android:backgroundTint="@color/E9FDF2"
                android:text="Visa"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="59dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/visa" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="92dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <Button
            android:id="@+id/payy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/C9F8DE"
            android:text="Proceed Payment"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="136dp"
            android:layout_height="86dp"
            android:layout_gravity="end"
            android:background="@drawable/logooosss" />


    </LinearLayout>
</RelativeLayout>